#include"icu.h"
#include "us.h"
#include"gpio.h"
#include<avr/io.h>

ICU_ConfigType icu;
uint8 g_edges=0;
uint16 totale_time=0;
uint8 flag=0;
/*************************************************************************************************
 	 	 	 	 	 	 	 function Definitions
*********************************************************************************************** */
 /* description :
 1. Initialize the ICU driver as required.
 2. Setup the ICU call back function.
3. Setup the direction for the trigger pin as output pin through the
GPIO driver
 */
void Ultrasonic_init(void){
	/* create an object of the ICU_ConfigType to call it in the init of ICU */
	icu.clock=F_CPU_8;
 	icu.edge=FALLING;

	/*set call back fn */
	ICU_setCallBack(Ultrasonic_edgeProcessing);
	/*Setup the direction for the trigger pin as output pin*/
	GPIO_setupPinDirection(TRIGGER_PORT_ID,TRIGGER_PIN_ID,PIN_OUTPUT);
}
/*description :
 * Send the Trigger pulse to the ultrasonic.
 */
void Ultrasonic_Trigger(void){
	/* Initialize timer0 to create a PWM of T>=10US-> Fcpu<=100 KHZ
	 F_PWM=(F_CPU)/(256*N)=(8MG)/(256*N)=100KHZ->N=1 */

	/* for TCCR0 register :
	 * FOC0=0->PWM mood
	 * WGM00:WGM01 =11->fast PWM mood
	 * COM01=1 COM00=0 ->non_inverting fast PWM mood
	 * CS00=1 ,CS01:CS02=00 -> prescaler=1
	 */

	 TCCR0 =(1<<WGM01)|(1<<WGM00)|(1<<COM01)|(1<<CS00);

	 /* TCNT0 =0 meanse starting count from zero */
	 TCNT0=0;


}
/*description:
 1. Send the trigger pulse by using Ultrasonic_Trigger function.
 2.Start the measurements by the ICU from this moment.
  	  Return: The measured distance in Centimeter.

 */
uint16 Ultrasonic_readDistance(void){
	uint16 distance=0;
	Ultrasonic_Trigger();
	ICU_init(&icu);
	while (flag!=1);
	flag=0;
	distance= 0.017 * totale_time;
	return distance;
}
/*
 *  Description:
1. This is the call back function called by the ICU driver.
2.This is used to calculate the high time (pulse time) generated by
the ultrasonic sensor.
 *
 */
void Ultrasonic_edgeProcessing(void){
	g_edges++;
	if (g_edges==1){
		totale_time =ICU_getInputCaptureValue();
		ICU_clearTimerValue();
		g_edges=0;
		ICU_setEdgeDetectionType(RAISING);
		flag=1;

	}
}

